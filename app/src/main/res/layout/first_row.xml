<?xml version="1.0" encoding="utf-8"?>
<TableRow android:background="@color/important_back"
    android:id="@+id/traningprogram"
    android:layout_marginTop="25dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleColor="#041794"
        app:mrl_rippleRoundedCorners="@dimen/activity_horizontal_margin">

        <Button
            android:id="@+id/child_right"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="5dp"
            android:textSize="35sp"
            android:text="@string/child_right_letter"/>

    </com.balysv.materialripple.MaterialRippleLayout>

</TableRow>