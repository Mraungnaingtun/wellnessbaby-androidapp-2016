<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/time_line"
    android:orientation="vertical"
    android:background="@color/timeline_background1">


    <com.team15.lower.wellnessbaby.Rounded_View
        android:id="@+id/user_image"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/mon_child"
        android:layout_marginTop="59dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_alignStart="@+id/linearLayout2"/>

    <EditText
        android:id="@+id/achay_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mg Mg"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="89dp"
        android:layout_alignBottom="@+id/user_image"
        android:layout_toRightOf="@+id/user_image"
        android:layout_toEndOf="@+id/user_image"
        android:textSize="40sp"

        />

    <EditText
        android:id="@+id/age_letter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 months and 2 days old"
        android:layout_above="@+id/linearLayout2"
        android:layout_alignLeft="@+id/achay_name"
        android:layout_alignStart="@+id/achay_name"
        android:cursorVisible="false"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/achay_name"
        android:id="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/birthday_edittext"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:hint="Text"
            android:textSize="25sp"
            android:paddingLeft="25dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/timeline_border"
            android:inputType="date"
            android:drawableLeft="@drawable/birthday"
            />

        <EditText
            android:id="@+id/gender_text"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:hint="Gender"
            android:textSize="25sp"
            android:paddingLeft="40dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/timeline_border"
            android:drawableLeft="@drawable/gender" />

        <EditText
            android:id="@+id/weight"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:hint="Weight"
            android:textSize="25sp"
            android:layout_marginTop="4dp"
            android:paddingLeft="40dp"
            android:drawableLeft="@drawable/weight"
            android:background="@drawable/timeline_border"/>
        <EditText
            android:id="@+id/height"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:hint="Height"
            android:textSize="25sp"
            android:paddingLeft="40dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/timeline_border"
            android:drawableLeft="@drawable/height"/>

    </LinearLayout>





    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:src="@android:drawable/ic_input_add"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/fab_margin"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/user_image"
        android:layout_toEndOf="@+id/user_image" />

</RelativeLayout>





