<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/main_background"
    tools:context="com.team15.lower.wellnessbaby.About">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        app:cardCornerRadius="12dp">

        <TextView
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="About"
            android:textSize="30dp"
            android:padding="17dp"
            android:paddingLeft="10dp"
            android:textStyle="bold|italic"
            android:background="#dfb2a5"
            android:textAlignment="center"/>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/card"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/target"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Target User"
            android:textSize="30dp"
            android:textStyle="bold|italic"
            android:background="#dfb2a5"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:text="-To All People who wanna to take care their baby properly"/>

       <!-- <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:text="-To All People who wanna to take care their baby properly"/>-->


    </LinearLayout>

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/lin"
        android:textSize="25dp"
        android:text="Contact Us"
        android:textStyle="bold|italic"
        android:background="#dfb2a5"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/spon"
        android:layout_below="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:text="-For sponsorship or advice for this application contact us."/>



    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="email"
        android:text="wellnessbaby2016@gmail.com"
        android:textSize="20dp"
        android:paddingTop="17dp"
        android:paddingLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/spon"
        android:layout_alignEnd="@+id/spon"
        android:layout_marginRight="43dp"
        android:layout_marginEnd="43dp" />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view2">


    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/facebook"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:paddingTop="10dp"
        android:textSize="20dp"
        android:drawableLeft="@drawable/fb"
        android:layout_below="@+id/phone"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Gmail     :"
        android:id="@+id/textView7"
        android:layout_above="@+id/facebook"
        android:layout_toRightOf="@+id/view2"
        android:layout_toEndOf="@+id/view2"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Facebook   :"
        android:id="@+id/textView8"
        android:layout_alignBottom="@+id/facebook"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Phone      :"
        android:id="@+id/textView9"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="09785388159"
        android:id="@+id/textView10"
        android:layout_alignTop="@+id/textView9"
        android:textColor="@color/colorPrimary"
        android:layout_alignLeft="@+id/phone"
        android:layout_alignStart="@+id/phone" />

</RelativeLayout>
