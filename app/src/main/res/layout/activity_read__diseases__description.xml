<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.team15.lower.wellnessbaby.Read_Diseases_Description">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/bg_dd"
        android:scaleType="fitXY"
        android:id="@+id/imageView3" />

    <TextView
        android:id="@+id/disease_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="asdf"
        android:textSize="35dp"
        android:textAlignment="center"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:background="#01adc5"
        android:textColor="#ffffff"/>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/disease_title"
        android:layout_centerHorizontal="true"
        android:scrollbars="vertical"
        android:layout_marginTop="10dp"
        android:fillViewport="true">

        <TextView
            android:id="@+id/disease_description_for_each"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="asdf"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:scrollbarStyle="insideInset"/>


    </ScrollView>


</RelativeLayout>
